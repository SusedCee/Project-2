<!DOCTYPE html>
<html>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/styles/main.css">
    <link href="https://fonts.googleapis.com/css?family=Aldrich|DM+Serif+Display&display=swap" rel="stylesheet">
        <title>Items Index Page</title>
    </head>
    <body>
    <header>
      <%- include ../partials/_navbar.ejs %>
    </header>

    <h1>Cool Stuff Index Page</h1>
        <ul>
            <%items.forEach(function(item,index){ %>
            <li>
                <a href="/items/<%=item._id%>"><img src='<%=item.img%>'></a>             	
                <div class ="likedislike">
                    <form action='/items/<%=item._id%>/addLike' method="post">
                    <input type='submit' value="Love It"><%=item.likes.length%>
                    </form>
                     <form action='/items/<%=item._id%>/addDislike' method="post">
                    <input type='submit' value="Hate It"><%=item.dislikes.length%>
                    </form>
                </div>
            </li>
            <% }) %>
        </ul>
        <%if(session.logged) {%>
        <nav>
             <form action='/items/new'>
                    <input type="submit" value="Add a new item!">
                </form>
        </nav>
        <%}%>
        
        <footer>
        <%- include ../partials/_footer.ejs %>
    </footer>
    </body>

    
</html>


