<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/styles/main.css">
        <link href="https://fonts.googleapis.com/css?family=Aldrich|DM+Serif+Display&display=swap" rel="stylesheet">
        <title>Items Index Page</title>
    </head>
    <body>

    <header>
      <nav>
        <ul>
          <li><a href="/">Home Page</a></li>
          <li><a href="/users">Owners</a></li>
        </ul>
      </nav>
    </header>
    <h1>Cool Stuff Index Page</h1>
        <ul>
            <%items.forEach(function(item,index){ %>
            <li>
                <a href="/items/<%=item._id%>"><img src='<%=item.img%>'></a>
            </li>
            <% }) %>
        </ul>
        <%if(session.logged) {%>
        <nav>
             <form action='/items/new'>
                    <input type="submit" value="Add a new item!">
                </form>
        </nav>
        <%}%>

    </body>

    <footer>
        <%- include ../partials/_footer.ejs %>
    </footer>
</html>
