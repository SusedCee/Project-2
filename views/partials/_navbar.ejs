
<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<script src="/js/navigation.js"></script>
</head>
<body>

        <div id="navbar"> 
            <nav id='navContainer'>
                <div class="logo">
                    <img id="logo" src="/images/redcarpetlogo.png">
                </div>
                <ul class="nav-links">
                    <li><a href="/">Home</a></li>
                    <li><a href="/items">Celebs</a></li>
                    <li><a href="/users">Members</a></li>
                    <li> <a href="#registerModal" data-toggle="modal"><img src="/images/register.png" width="70" height="70" class="icon">Register</a></li>
                    <li>
                    <%if(!session.logged){%>
                    <a href="#loginModal"  data-toggle="modal"><img src="/images/login.png" width="70" height="70" class="icon">Login</a></li>
                    <%}else{%>
                    <a href="/users/logout" ><img src="/images/login.png" width="70" height="70" class="icon">Logout</a></li>
                    <%}%>
                </ul>
                <div class="burger">
                    <div class="line1"></div>
                    <div class="line2"></div>
                    <div class="line3"></div>
                </div>
            </nav>
        </div>

<div class="container">
  <div class="modal fade" id="loginModal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h1 class='modalHeader'>Welcome Back!</h1>
        </div>
        <div class="modal-body">
            <form action="/users/login" method="POST">
                <input class='formFields' placeholder="Email" type="email" name="email"><br/>
                <input class='formFields' placeholder="Password" type="password" name="password"><br/>
                <input class='formFields' id='loginButton' type='submit' value="Login"/>
            </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="modal fade" id="registerModal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h1 class='modalHeader'>Welcome To Red Carpet</h1>
        </div>
        <div class="modal-body">
            <form action="/users" method="POST">
                <input class='formFields' type="text" placeholder="Username" name="username"><br/>
                <input class='formFields' placeholder="Email" type="email" name="email"><br/>
                <input class='formFields' placeholder="Password" type="password" name="password"><br/>
                <input class='formFields' id="registerButton" type='submit' value="Login"/>
            </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>

<%if(session.message){%>
    <script>
    console.log('script')
    alert("<%=session.message%>")
    </script>
    <%}%>
</body>
</html>


